{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Étudiant{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-tachometer-alt me-2"></i>Tableau de bord Étudiant
                </h1>
                <a href="{{ path('app_etudiant_offres') }}" class="btn btn-primary">
                    <i class="fas fa-search me-2"></i>Voir les offres de stage
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Statistiques -->
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">{{ candidatures|length }}</h4>
                            <p class="card-text">Candidatures</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-paper-plane fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">
                                {{ candidatures|filter(c => c.statut == 'accepte')|length }}
                            </h4>
                            <p class="card-text">Acceptées</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">
                                {{ candidatures|filter(c => c.statut == 'en_attente')|length }}
                            </h4>
                            <p class="card-text">En attente</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">
                                {{ candidatures|filter(c => c.statut == 'refuse')|length }}
                            </h4>
                            <p class="card-text">Refusées</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-times-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Dernières candidatures -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-history me-2"></i>Dernières candidatures
                    </h5>
                </div>
                <div class="card-body">
                    {% if candidatures|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Offre</th>
                                    <th>Entreprise</th>
                                    <th>Date de candidature</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for candidature in candidatures|slice(0, 5) %}
                                    <tr>
                                        <td>{{ candidature.offre.titre }}</td>
                                        <td>{{ candidature.offre.entreprise.nom }}</td>
                                        <td>{{ candidature.dateCandidature|date('d/m/Y H:i') }}</td>
                                        <td>
                                            {% if candidature.statut == 'accepte' %}
                                                <span class="badge bg-success">Acceptée</span>
                                            {% elseif candidature.statut == 'refuse' %}
                                                <span class="badge bg-danger">Refusée</span>
                                            {% else %}
                                                <span class="badge bg-warning">En attente</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="#" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a href="{{ path('app_etudiant_candidatures') }}" class="btn btn-outline-primary">
                                Voir toutes mes candidatures
                            </a>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucune candidature pour le moment</h5>
                            <p class="text-muted">Commencez par parcourir les offres de stage disponibles.</p>
                            <a href="{{ path('app_etudiant_offres') }}" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Voir les offres
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
