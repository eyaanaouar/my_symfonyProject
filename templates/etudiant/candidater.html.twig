{% extends 'base.html.twig' %}

{% block title %}Postuler - {{ offre.titre }}{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-paper-plane me-2"></i>Postuler à l'offre
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Informations sur l'offre -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5>{{ offre.titre }}</h5>
                            <p class="mb-1"><strong>Entreprise:</strong> {{ offre.entreprise.nom }}</p>
                            <p class="mb-1"><strong>Période:</strong> Du {{ offre.dateDebut|date('d/m/Y') }} au {{ offre.dateFin|date('d/m/Y') }}</p>
                            {% if offre.lettreMotivationRequise %}
                                <div class="alert alert-info mt-2">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Une lettre de motivation est requise pour cette offre.
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Formulaire de candidature -->
                    {{ form_start(form) }}
                    {{ form_row(form.notes, {
                        'attr': {'class': 'form-control', 'rows': 6},
                        'label': 'Message de motivation'
                    }) }}

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-paper-plane me-2"></i>Envoyer ma candidature
                        </button>
                        <a href="{{ path('app_etudiant_offres') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour aux offres
                        </a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
