{% extends 'base.html.twig' %}

{% block title %}Postuler - {{ offre.titre }}{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-paper-plane me-2"></i>Postuler à l'offre
                    </h4>
                </div>
                <div class="card-body">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5>{{ offre.titre }}</h5>
                            <p class="mb-1"><strong>Entreprise:</strong> {{ offre.entreprise.nom }}</p>
                            <p class="mb-1"><strong>Période:</strong> Du {{ offre.dateDebut|date('d/m/Y') }} au {{ offre.dateFin|date('d/m/Y') }}</p>
                        </div>
                    </div>

                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    {{ form_row(form.notes) }}

                    <div class="row mt-3">
                        <div class="col-md-6">
                            {{ form_row(form.cv) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.lettre_motivation) }}
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-paper-plane me-2"></i>Envoyer ma candidature
                        </button>
                        <a href="{{ path('app_etudiant_offres') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour aux offres
                        </a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
