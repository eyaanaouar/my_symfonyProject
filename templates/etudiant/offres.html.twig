{% extends 'base.html.twig' %}

{% block title %}Offres de Stage{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-briefcase me-2"></i>Offres de Stage</h1>
            </div>
        </div>
    </div>

    <!-- BARRE DE RECHERCHE -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0"
                               placeholder="Rechercher par titre de stage ou nom de l'entreprise...">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row" id="offresContainer">
        {% if offres|length > 0 %}
            {% for offre in offres %}
                <div class="col-md-6 col-lg-4 mb-4 offre-card">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-white">
                            <h5 class="card-title mb-0 text-primary">{{ offre.titre }}</h5>
                            <small class="text-muted company-name"><i class="fas fa-building me-1"></i>{{ offre.entreprise.nom }}</small>
                        </div>
                        <div class="card-body">
                            <p class="card-text text-truncate-3">{{ offre.description }}</p>
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    Du {{ offre.dateDebut|date('d/m/Y') }} au {{ offre.dateFin|date('d/m/Y') }}
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <div class="d-grid">
                                <a href="{{ path('app_etudiant_candidater', {'id': offre.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i>Postuler
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12 text-center py-5">
                <i class="fas fa-briefcase fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Aucune offre de stage disponible</h5>
            </div>
        {% endif %}
    </div>

    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            let filter = this.value.toLowerCase();
            let cards = document.getElementsByClassName('offre-card');

            for (let i = 0; i < cards.length; i++) {
                let title = cards[i].querySelector('.card-title').innerText.toLowerCase();
                let company = cards[i].querySelector('.company-name').innerText.toLowerCase();

                if (title.includes(filter) || company.includes(filter)) {
                    cards[i].style.display = "";
                } else {
                    cards[i].style.display = "none";
                }
            }
        });
    </script>
{% endblock %}
