{% extends 'base.html.twig' %}

{% block title %}Offres de Stage{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-briefcase me-2"></i>Offres de Stage
                </h1>
                <a href="{{ path('app_etudiant_dashboard') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour au tableau de bord
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        {% if offres|length > 0 %}
            {% for offre in offres %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="card-title mb-0">{{ offre.titre }}</h5>
                            <small class="text-muted">{{ offre.entreprise.nom }}</small>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                {% if offre.description|length > 150 %}
                                    {{ offre.description|slice(0, 150) }}...
                                {% else %}
                                    {{ offre.description }}
                                {% endif %}
                            </p>
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    Du {{ offre.dateDebut|date('d/m/Y') }} au {{ offre.dateFin|date('d/m/Y') }}
                                </small>
                            </div>
                            {% if offre.lettreMotivationRequise %}
                                <span class="badge bg-info">Lettre de motivation requise</span>
                            {% endif %}
                        </div>
                        <div class="card-footer">
                            <div class="d-grid gap-2">
                                <a href="{{ path('app_etudiant_candidater', {'id': offre.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i>Postuler
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-briefcase fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aucune offre de stage disponible</h5>
                        <p class="text-muted">Revenez plus tard pour d√©couvrir de nouvelles offres.</p>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
