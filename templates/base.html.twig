<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Gestion de Stages{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <i class="fas fa-briefcase me-2"></i>Gestion de Stages
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                </li>
                {% if is_granted('ROLE_ETUDIANT') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_etudiant_dashboard') }}">Tableau de bord</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_etudiant_offres') }}">Offres de stage</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_etudiant_candidatures') }}">Mes candidatures</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ENTREPRISE') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_entreprise_dashboard') }}">Tableau de bord</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_entreprise_offre_new') }}">Nouvelle offre</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_dashboard') }}">Administration</a>
                    </li>
                {% endif %}
            </ul>

            <div class="navbar-nav">
                {% if app.user %}
                    <span class="navbar-text me-3">
                        <i class="fas fa-user me-1"></i>
                        {% if app.user.prenom is defined %}
                            {{ app.user.prenom }} {{ app.user.nom }}
                        {% else %}
                            {{ app.user.nom }}
                        {% endif %}
                    </span>
                    <a class="nav-link" href="{{ path('app_logout') }}">
                        <i class="fas fa-sign-out-alt me-1"></i>Déconnexion
                    </a>
                {% else %}
                    <a class="nav-link" href="{{ path('app_login') }}">
                        <i class="fas fa-sign-in-alt me-1"></i>Connexion
                    </a>
                    <a class="nav-link" href="{{ path('app_register') }}">
                        <i class="fas fa-user-plus me-1"></i>Inscription
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</nav>
<div class="container mt-4">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% block body %}{% endblock %}
</div>

<footer class="bg-light mt-5 py-4">
    <div class="container text-center">
        <p class="mb-0">&copy; 2025 Gestion de Stages. Tous droits réservés.</p>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
