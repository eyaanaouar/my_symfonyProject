{% extends 'base.html.twig' %}

{% block title %}Gestion des Étudiants{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-graduation-cap me-2"></i>Gestion des Étudiants
                </h1>
                <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour au tableau de bord
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    {% if etudiants|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nom & Prénom</th>
                                    <th>Email</th>
                                    <th>Date d'inscription</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for etudiant in etudiants %}
                                    <tr>
                                        <td>{{ etudiant.id }}</td>
                                        <td>{{ etudiant.prenom }} {{ etudiant.nom }}</td>
                                        <td>{{ etudiant.email }}</td>
                                        <td>{{ etudiant.dateInscription|date('d/m/Y H:i') }}</td>
                                        <td>
                                            {% if etudiant.estValide %}
                                                <span class="badge bg-success">Validé</span>
                                            {% else %}
                                                <span class="badge bg-warning">En attente</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if not etudiant.estValide %}
                                                <a href="{{ path('app_admin_etudiant_valider', {'id': etudiant.id}) }}"
                                                   class="btn btn-sm btn-success"
                                                   onclick="return confirm('Valider cet étudiant ?')">
                                                    <i class="fas fa-check"></i> Valider
                                                </a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun étudiant inscrit</h5>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
