{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1><i class="fas fa-shield-alt"></i> Administration - Approbations</h1>

        <div class="row mt-4">
            <!-- Comptes Étudiants en attente -->
            <div class="col-md-12 mb-4">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">Étudiants en attente d'approbation</div>
                    <div class="card-body">
                        <table class="table">
                            <thead><tr><th>Nom</th><th>Email</th><th>Action</th></tr></thead>
                            <tbody>
                            {% for etudiant in etudiantsEnAttente %}
                                <tr>
                                    <td>{{ etudiant.prenom }} {{ etudiant.nom }}</td>
                                    <td>{{ etudiant.email }}</td>
                                    <td>
                                        <a href="{{ path('app_admin_etudiant_valider', {id: etudiant.id}) }}" class="btn btn-sm btn-success">Approuver</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr><td colspan="3" class="text-center">Aucun étudiant en attente</td></tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Comptes Entreprises en attente -->
            <div class="col-md-12 mb-4">
                <div class="card border-success">
                    <div class="card-header bg-success text-white">Entreprises en attente d'approbation</div>
                    <div class="card-body">
                        <table class="table">
                            <thead><tr><th>Entreprise</th><th>Email</th><th>Action</th></tr></thead>
                            <tbody>
                            {% for entreprise in entreprisesEnAttente %}
                                <tr>
                                    <td>{{ entreprise.nom }}</td>
                                    <td>{{ entreprise.email }}</td>
                                    <td>
                                        <a href="{{ path('app_admin_entreprise_valider', {id: entreprise.id}) }}" class="btn btn-sm btn-success">Approuver</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr><td colspan="3" class="text-center">Aucune entreprise en attente</td></tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Offres de stage en attente -->
            <div class="col-md-12 mb-4">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark">Offres de stage à valider</div>
                    <div class="card-body">
                        <table class="table">
                            <thead><tr><th>Titre</th><th>Entreprise</th><th>Action</th></tr></thead>
                            <tbody>
                            {% for offre in offresEnAttente %}
                                <tr>
                                    <td>{{ offre.titre }}</td>
                                    <td>{{ offre.entreprise.nom }}</td>
                                    <td>
                                        <a href="{{ path('app_admin_offre_valider', {id: offre.id}) }}" class="btn btn-sm btn-warning">Publier l'offre</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr><td colspan="3" class="text-center">Aucune offre en attente</td></tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
