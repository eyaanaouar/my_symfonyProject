{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Administrateur{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-cogs me-2"></i>Tableau de bord Administrateur
                </h1>
            </div>
        </div>
    </div>

    <!-- Statistiques -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">{{ totalEtudiants }}</h4>
                            <p class="card-text">Étudiants</p>
                            <small>{{ etudiantsValides }} validés</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-graduation-cap fa-2x"></i>
                        </div>
                    </div>
                    <a href="{{ path('app_admin_etudiants') }}" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">{{ totalEntreprises }}</h4>
                            <p class="card-text">Entreprises</p>
                            <small>{{ entreprisesValides }} validées</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-building fa-2x"></i>
                        </div>
                    </div>
                    <a href="{{ path('app_admin_entreprises') }}" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">{{ totalOffres }}</h4>
                            <p class="card-text">Offres de stage</p>
                            <small>{{ offresValides }} validées</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-briefcase fa-2x"></i>
                        </div>
                    </div>
                    <a href="{{ path('app_admin_offres') }}" class="stretched-link"></a>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions rapides -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tachometer-alt me-2"></i>Actions rapides
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a href="{{ path('app_admin_etudiants') }}" class="btn btn-outline-primary w-100">
                                <i class="fas fa-users me-2"></i>Gérer les étudiants
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="{{ path('app_admin_entreprises') }}" class="btn btn-outline-success w-100">
                                <i class="fas fa-building me-2"></i>Gérer les entreprises
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="{{ path('app_admin_offres') }}" class="btn btn-outline-info w-100">
                                <i class="fas fa-briefcase me-2"></i>Gérer les offres
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
