{% extends 'base.html.twig' %}

{% block title %}Gestion des Entreprises{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-building me-2"></i>Gestion des Entreprises
                </h1>
                <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour au tableau de bord
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    {% if entreprises|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    <th>Email</th>
                                    <th>Téléphone</th>
                                    <th>Adresse</th>
                                    <th>Date d'inscription</th>
                                    <th>Offres</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entreprise in entreprises %}
                                    <tr>
                                        <td>{{ entreprise.id }}</td>
                                        <td>
                                            <strong>{{ entreprise.nom }}</strong>
                                        </td>
                                        <td>{{ entreprise.email }}</td>
                                        <td>{{ entreprise.telephone ? entreprise.telephone : '-' }}</td>
                                        <td>
                                            {% if entreprise.adresse %}
                                                <button type="button" class="btn btn-sm btn-outline-info"
                                                        data-bs-toggle="popover"
                                                        title="Adresse complète"
                                                        data-bs-content="{{ entreprise.adresse }}">
                                                    <i class="fas fa-map-marker-alt"></i>
                                                </button>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ entreprise.dateInscription|date('d/m/Y H:i') }}</td>
                                        <td>
                                            <span class="badge bg-secondary">{{ entreprise.offreStages|length }}</span>
                                        </td>
                                        <td>
                                            {% if entreprise.estValide %}
                                                <span class="badge bg-success">Validée</span>
                                            {% else %}
                                                <span class="badge bg-warning">En attente</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                {% if not entreprise.estValide %}
                                                    <a href="{{ path('app_admin_entreprise_valider', {'id': entreprise.id}) }}"
                                                       class="btn btn-sm btn-success"
                                                       onclick="return confirm('Valider cette entreprise ?')"
                                                       title="Valider">
                                                        <i class="fas fa-check"></i>
                                                    </a>
                                                {% else %}
                                                    <a href="#"
                                                       class="btn btn-sm btn-secondary disabled"
                                                       title="Déjà validée">
                                                        <i class="fas fa-check-double"></i>
                                                    </a>
                                                {% endif %}
                                                <a href="{{ path('app_entreprise_dashboard') }}"
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="Voir le tableau de bord"
                                                   target="_blank">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <!-- Statistiques -->
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="alert alert-info">
                                    <i class="fas fa-chart-bar me-2"></i>
                                    <strong>Statistiques :</strong><br>
                                    • Total entreprises : {{ entreprises|length }}<br>
                                    • Entreprises validées : {{ entreprises|filter(e => e.estValide)|length }}<br>
                                    • Entreprises en attente : {{ entreprises|filter(e => not e.estValide)|length }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="alert alert-light">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>Actions disponibles :</strong><br>
                                    • <i class="fas fa-check text-success"></i> Valider une entreprise<br>
                                    • <i class="fas fa-eye text-primary"></i> Voir le tableau de bord
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-building fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucune entreprise inscrite</h5>
                            <p class="text-muted">Les entreprises apparaîtront ici lorsqu'elles s'inscriront.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        // Activer les popovers Bootstrap pour les adresses
        document.addEventListener('DOMContentLoaded', function() {
            var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
            var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
                return new bootstrap.Popover(popoverTriggerEl);
            });
        });
    </script>
{% endblock %}
